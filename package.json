{
  "name": "spottybot",
  "version": "1.0.1",
  "description": "A service for collaborating on Spotify playlists through slack",
  "scripts": {
    "build": "tsc",
    "postinstall": "npm run clean && npm run build",
    "clean": "rm -rf dist",
    "start": "node dist/main.js",
    "test": "tsc && ava",
    "ping": "ts-node src/main.ts"
  },
  "bin": {
    "spottybot": "./index.js"
  },
  "keywords": [
    "spotify",
    "slack",
    "playlist",
    "music",
    "collaborate"
  ],
  "author": "Allan Calix",
  "license": "MIT",
  "dependencies": {
    "@slack/client": "^4.3.1",
    "body-parser": "^1.18.3",
    "express": "^4.16.3",
    "spotify-web-api-node": "^3.1.1",
    "uuid": "^3.2.1"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.0",
    "@types/express": "^4.16.0",
    "@types/node": "^10.3.3",
    "@types/uuid": "^3.4.3",
    "ava": "1.0.0-beta.5.1",
    "ts-node": "^6.1.1",
    "typescript": "^2.9.2"
  }
}
